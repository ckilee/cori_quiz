<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/activity_win"
    tools:context="frolic.br.coriquiz.WinActivity"
    android:background="@drawable/backgroundmain">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/trophy" />

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:id="@+id/cardViewTextViewMessage"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewWinMessage"
         />
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_to_main"
        android:elevation="5dp"
        android:id="@+id/buttonBackToMain"
        android:layout_below="@+id/cardViewTextViewMessage"
        android:layout_alignParentLeft="true"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_toLeftOf="@+id/space2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_ranking"
        android:elevation="5dp"
        android:id="@+id/buttonSeeRanking"
        android:layout_below="@+id/cardViewTextViewMessage"
        android:layout_alignParentRight="true"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_toRightOf="@+id/space2" />


    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/space2" />
</RelativeLayout>
