<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="frolic.br.coriquiz.LoginActivity"
    android:background="@drawable/backgroundlogin">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_as_anonymous"
        android:id="@+id/buttonLoginAnonymous"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/login_button"
        android:layout_alignStart="@+id/login_button"
        android:background="@android:drawable/dialog_holo_light_frame" />

    <com.facebook.login.widget.LoginButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/login_button"
        android:layout_above="@+id/buttonLoginAnonymous"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/applabel" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cori_logo"
        android:layout_above="@+id/login_button" />


</RelativeLayout>
