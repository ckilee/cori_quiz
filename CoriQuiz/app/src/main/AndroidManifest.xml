<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="frolic.br.coriquiz" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name=".RoundActivity"
            android:label="@string/title_activity_round"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".BetweenRoundActivity"
            android:label="@string/title_activity_between_round"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".FailActivity"
            android:label="@string/title_activity_fail"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".WinActivity"
            android:label="@string/title_activity_win"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name=".RankingActivity"
            android:label="@string/title_activity_ranking"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Main2Activity"
            android:label="@string/choose_round"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".ChatActivity" >
        </activity>
    </application>

</manifest>
